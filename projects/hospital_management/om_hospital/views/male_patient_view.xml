<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Hospital Patient's action -->
    <record id="action_hospital_male_patient" model="ir.actions.act_window">
        <field name="name">Male Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="context">{'default_gender':'male'}</field>
        <field name="domain">[('gender', '=', 'male')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first male patient!
            </p>
        </field>
    </record>

    <!-- Hospital male patient's menu -->
    <menuitem id="menu_male_patient" parent="menu_patient_master" action="action_hospital_male_patient" name="Male Patient" sequence="3"/>

</odoo>