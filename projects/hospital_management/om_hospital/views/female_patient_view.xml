<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Hospital Patient's action -->
    <record id="action_hospital_female_patient" model="ir.actions.act_window">
        <field name="name">Female Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="context">{'default_gender':'female'}</field>
        <field name="domain">[('gender', '=', 'female')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first female patient!
            </p>
        </field>
    </record>

    <!-- Hospital female patient's menu -->
    <menuitem id="menu_female_patient" parent="menu_patient_master" action="action_hospital_female_patient" name="Female Patient" sequence="2"/>

</odoo>